<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStyleTitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color33</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color33</item>
    </style>
    <style name="textStyleContentItem" parent="textStyleLabel">
    </style>
    <style name="dividerLine">
        <item name="android:background">@color/color_divider</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="LoadingDialog" parent="AppTheme">
        <!--去掉Dialog的windowFrame框-->
        <item name="android:windowFrame">@null</item>
        <!--浮在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--非半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--去掉title-->
        <item name="android:windowNoTitle">true</item>
        <!--dialog的背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊，背景透明是这个-->
    </style>
</resources>
